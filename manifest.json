{
  "manifest_version": 3,
  "name": "Fact-Check Extension",
  "version": "1.1",
  "description": "Highlight text and fact-check it using web search context.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://api.search.brave.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/Readability.js", "content.js"]
    }
  ]
}
