{
  "manifest_version": 3,
  "name": "Advanced Fact-Check Extension",
  "version": "2.2",
  "description": "Fact-check any text or article using AI and web search for verification.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Fact-Check This Page"
  },
  "host_permissions": [
    "https://api.search.brave.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content-loader.js"]
  }
],
  "web_accessible_resources": [
  {
    "resources": ["content.js", "utils/*", "services/*", "ui/*", "api/*", "libs/*", "icons/*"],
    "matches": ["<all_urls>"]
  }
],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}